<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cafe.mapper.FlagMapper">

	<!-- Add weekly menu -->
	<insert id="register">
		insert into weekly
		(cafeName, menuName, wFlag, dateFlag)
		values (#{cafeName}, #{menuName}, #{wFlage}, #{dateFlag})
	</insert> 	
	
	<!-- display day menu list -->
	<select id="dayList" resultType="com.cafe.domain.WeeklyVO">
		select cafeName, info
		from cafeteria
	</select>

</mapper>